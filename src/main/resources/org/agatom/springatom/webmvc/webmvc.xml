<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       default-lazy-init="true"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/mvc
       http://www.springframework.org/schema/mvc/spring-mvc.xsd">


    <import resource="tiles/tiles.xml"/>
    <import resource="flows/flows.xml"/>
    <import resource="interceptors/interceptors.xml"/>

    <context:component-scan base-package="org.agatom.springatom.webmvc">
        <context:exclude-filter type="annotation" expression="org.agatom.springatom.component.builders.annotation.ComponentBuilds"/>
        <context:exclude-filter type="annotation" expression="org.agatom.springatom.ip.annotation.InfoPage"/>
        <context:exclude-filter type="annotation" expression="org.agatom.springatom.ip.annotation.DomainInfoPage"/>
    </context:component-scan>

    <mvc:annotation-driven validator="validator"
                           conversion-service="springAtomConversionService"
                           ignoreDefaultModelOnRedirect="true"
                           enableMatrixVariables="true">
        <mvc:message-converters register-defaults="true">
            <bean class="org.springframework.http.converter.json.MappingJacksonHttpMessageConverter">
                <property name="objectMapper">
                    <bean class="org.springframework.http.converter.json.JacksonObjectMapperFactoryBean">
                        <property name="failOnEmptyBeans" value="false"/>
                        <property name="autoDetectGettersSetters" value="true"/>
                        <property name="indentOutput" value="false"/>
                    </bean>
                </property>
                <property name="prettyPrint" value="false"/>
            </bean>
        </mvc:message-converters>
        <mvc:argument-resolvers>
            <bean class="com.github.dandelion.datatables.extras.spring3.ajax.DatatablesCriteriasMethodArgumentResolver"/>
            <bean class="org.agatom.springatom.component.mvc.InContextBuilderLinkMethodArgumentResolver"/>
        </mvc:argument-resolvers>
    </mvc:annotation-driven>
    <!--suppress SpringModelInspection -->
    <mvc:resources mapping="/static/**"
                   cache-period="10"
                   location="/static/,classpath:/META-INF/web-resources/,classpath:/META-INF/resources/webjars/,classpath:/datatables/"/>
    <mvc:default-servlet-handler/>

    <bean id="jodaDtff" class="org.springframework.format.datetime.joda.DateTimeFormatterFactory">
        <property name="pattern" value="YYYY-MM-dd"/>
    </bean>
    <bean id="jodaTff" class="org.springframework.format.datetime.joda.DateTimeFormatterFactory">
        <property name="pattern" value="HH:mm"/>
    </bean>

    <bean id="springAtomConversionService"
          class="org.springframework.format.support.FormattingConversionServiceFactoryBean"
          depends-on="jodaDtff,jodaTff"
          lazy-init="false">
        <property name="registerDefaultFormatters" value="true"/>
        <property name="formatterRegistrars">
            <set>
                <bean class="org.springframework.format.datetime.joda.JodaTimeFormatterRegistrar">
                    <property name="dateFormatter">
                        <bean factory-bean="jodaDtff" factory-method="createDateTimeFormatter"/>
                    </property>
                    <property name="timeFormatter">
                        <bean factory-bean="jodaTff" factory-method="createDateTimeFormatter"/>
                    </property>
                </bean>
            </set>
        </property>
        <property name="converters">
            <set>
                <bean class="org.agatom.springatom.webmvc.converters.SSecurityAuthorityEnumConverted"/>
                <bean class="org.agatom.springatom.webmvc.converters.StringToUnixTimestampConverter"/>
                <bean class="org.agatom.springatom.webmvc.converters.IntervalToStringConverter"/>
            </set>
        </property>
        <property name="formatters">
            <set>
                <bean class="org.springframework.format.datetime.DateFormatter">
                    <property name="pattern" value="YYYY-MM-dd"/>
                </bean>
            </set>
        </property>
    </bean>

    <bean id="domainClassConverter"
          class="org.springframework.data.repository.support.DomainClassConverter"
          lazy-init="false"
          primary="true"
          depends-on="springAtomConversionService">
        <constructor-arg ref="springAtomConversionService"/>
    </bean>


</beans>