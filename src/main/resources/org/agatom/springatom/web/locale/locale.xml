<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="messageSource"
          init-method="init"
          class="org.agatom.springatom.web.locale.impl.SMessageSourceImpl">
        <property name="basenames">
            <array>
                <value>classpath:org/agatom/springatom/web/locale/ui</value>
                <value>classpath:org/agatom/springatom/web/locale/format</value>
                <value>classpath:org/agatom/springatom/web/locale/messages</value>
            </array>
        </property>
        <property name="cacheSeconds" value="60"/>
        <property name="storageMode" value="COMBINED"/>
        <property name="splitBy" value="="/>
        <property name="defaultEncoding" value="UTF-8"/>
        <property name="fileEncodings" value="UTF-8"/>
        <property name="useCodeAsDefaultMessage" value="true"/>
    </bean>
    <bean id="localeResolver" class="org.springframework.web.servlet.i18n.SessionLocaleResolver">
        <property name="defaultLocale" value="pl_PL"/>
    </bean>
</beans>