<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="actionsXMLResolver"
          class="org.agatom.springatom.web.support.actions.xml.SActionsXMLResolver">
        <property name="resolver" ref="jaxbResolver"/>
    </bean>
    <bean id="jaxbResolver"
          class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
        <property name="packagesToScan" value="org.agatom.springatom.web.support.actions.beans"/>
    </bean>

    <bean id="actionsRepository"
          class="org.agatom.springatom.web.support.actions.impl.SDefaultActionRepository"
          scope="singleton"
          depends-on="actionsXMLResolver"
          primary="true">
        <property name="actions">
            <map>
                <entry key="dashboard"
                       value="/META-INF/actions/actions-dashboard.xml"/>
            </map>
        </property>
        <property name="xmlResolver" ref="actionsXMLResolver"/>
        <property name="capacity" value="10"/>
    </bean>


</beans>