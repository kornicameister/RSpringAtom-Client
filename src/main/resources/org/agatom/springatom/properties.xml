<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="webProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location" value="classpath:org/agatom/springatom/web/web.properties"/>
    </bean>
    <bean id="webMvcProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location" value="classpath:org/agatom/springatom/webmvc/webmvc.properties"/>
    </bean>
    <bean id="databaseProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location" value="classpath:org/agatom/springatom/server/database.properties"/>
    </bean>
    <bean id="rbuilderProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location" value="classpath:org/agatom/springatom/web/rbuilder/rbuilder.properties"/>
    </bean>
    <bean id="urlMappingsProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location" value="classpath:org/agatom/springatom/webmvc/url-mapping.properties"/>
    </bean>
    <bean id="flowProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location" value="classpath:org/agatom/springatom/web/flows/flows.properties"/>
    </bean>

    <bean id="applicationProperties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <array>
                <value>classpath:org/agatom/springatom/web/web.properties</value>
                <value>classpath:org/agatom/springatom/webmvc/webmvc.properties</value>
                <value>classpath:org/agatom/springatom/server/database.properties</value>
                <value>classpath:org/agatom/springatom/web/rbuilder/rbuilder.properties</value>
                <value>classpath:org/agatom/springatom/webmvc/url-mapping.properties</value>
            </array>
        </property>
        <property name="fileEncoding" value="UTF-8"/>
        <property name="ignoreResourceNotFound" value="false"/>
        <property name="ignoreUnresolvablePlaceholders" value="false"/>
        <property name="searchSystemEnvironment" value="true"/>
        <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_FALLBACK"/>
        <property name="valueSeparator" value=","/>
    </bean>

</beans>