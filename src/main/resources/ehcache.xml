<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="ehcache.xsd" updateCheck="true" monitoring="autodetect"
         dynamicConfig="true">

    <diskStore path="java.io.tmpdir/springatom"/>

    <defaultCache maxEntriesLocalHeap="10000" eternal="false" timeToIdleSeconds="120" timeToLiveSeconds="120" diskSpoolBufferSizeMB="30"
                  maxEntriesLocalDisk="10000000" diskExpiryThreadIntervalSeconds="120" memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </defaultCache>

    <!-- idle and live silently ignored-->
    <cache name="cars"
           timeToLiveSeconds="3600"
           maxEntriesLocalHeap="200"
           overflowToDisk="true"/>
    <cache name="clients"
           timeToLiveSeconds="3600"
           maxEntriesLocalHeap="200"
           overflowToDisk="true"/>
    <cache name="reports"
           overflowToDisk="true"
           diskPersistent="true"
           timeToIdleSeconds="300"
           timeToLiveSeconds="600"
           maxEntriesLocalHeap="20"/>

</ehcache>