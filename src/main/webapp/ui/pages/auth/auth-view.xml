<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>


    <definition name="springatom.tiles.auth.action.login" template="/ui/pages/auth/actions/loginAction.jsp"/>
    <definition name="springatom.tiles.auth.action.logout" template="/ui/pages/auth/actions/logoutAction.jsp"/>

    <definition name="springatom.tiles.auth.login" extends="ui.core.Page">
        <put-attribute name="content" value="/ui/pages/auth/login.jsp"/>
    </definition>

    <definition name="springatom.tiles.auth.login.failed" extends="springatom.tiles.auth.login">
        <put-attribute name="error" value="/ui/pages/auth/error_login_failed.jsp"/>
    </definition>
    <definition name="springatom.tiles.auth.access.denied" extends="springatom.tiles.auth.login">
        <put-attribute name="error" value="/ui/pages/auth/error_access_is_denied.jsp"/>
    </definition>
    <definition name="springatom.tiles.auth.register" extends="ui.core.Page">
        <put-attribute name="content" value="/ui/pages/auth/register.jsp"/>
    </definition>

</tiles-definitions>