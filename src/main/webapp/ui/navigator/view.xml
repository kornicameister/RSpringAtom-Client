        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <definition name="abstract_navigator" template="/ui/navigator/navigator.jsp">
        <put-attribute name="navigator.secured" value="ui.navigator.secured"/>
        <put-attribute name="navigator.free" value="ui.navigator.free"/>
    </definition>

    <definition name="ui.navigator.free" template="/ui/navigator/menus/free_navigation.jsp"/>

    <definition name="ui.navigator.secured" template="/ui/navigator/secured_navigation.jsp">
        <put-attribute name="dashboard"
                       value="/ui/navigator/menus/dashboard_navigation.jsp"/>
        <put-attribute name="garage"
                       value="/ui/navigator/menus/garage_navigation.jsp"/>
        <put-attribute name="boss"
                       value="/ui/navigator/menus/boss_navigation.jsp"/>
        <put-attribute name="admin"
                       value="/ui/navigator/menus/admin_navigation.jsp"/>
    </definition>

</tiles-definitions>
