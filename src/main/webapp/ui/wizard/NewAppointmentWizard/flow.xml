<!--suppress XmlPathReference -->
<flow xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      parent="wizard"
      start-state="step1"
      xmlns="http://www.springframework.org/schema/webflow"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">
    <!-- inputs -->
    <!--
        Inputs gathered from calendarComponent
    -->
    <input name="begin" required="true" type="java.lang.Long"/>
    <input name="end" required="true" type="java.lang.Long"/>
    <input name="allDay" required="true" type="java.lang.Boolean"/>
    <input name="view" required="true" type="java.lang.String"/>
    <input name="popup" required="true" type="java.lang.Boolean"/>
    <input name="mode" required="true" type="java.lang.String"/>
    <input name="action" required="true" type="java.lang.String"/>
    <input name="calendar" required="false" type="java.lang.Boolean"/>

    <on-start>
        <evaluate expression="'NewAppointmentWizard'" result="flowScope.wizardID"/>
        <evaluate expression="'NewAppointmentWizardForm'" result="flowScope.formID"/>
        <evaluate expression="new org.agatom.springatom.web.flows.wizards.support.WizardRequiresStepsHolder()"
                  result="flowScope.requiredSteps"/>

        <!--init required steps-->
        <evaluate expression="flowScope.requiredSteps.add('step1')"/>
        <evaluate expression="flowScope.requiredSteps.add('step2')"/>
        <!--init requires steps-->
    </on-start>

    <view-state id="step1" view="ui.wizard.NewAppointmentWizard.1" popup="true">
        <on-render>
            <evaluate expression="newAppointmentStep1.setupForm"/>
        </on-render>
        <transition on="next" to="step2" validate="true" bind="true">
            <evaluate expression="newAppointmentStep1.bindAndValidate"/>
        </transition>
        <transition on="cancel" to="successCancel" history="invalidate" bind="false">
            <evaluate expression="newAppointmentStep1.resetForm"/>
        </transition>
    </view-state>

    <view-state id="step2" view="ui.wizard.NewAppointmentWizard.2" popup="true">
        <on-render>
            <evaluate expression="newAppointmentStep2.setupForm"/>
        </on-render>
        <transition on="finish" to="successCancel" bind="true" validate="true">
            <evaluate expression="newAppointmentStep2.bindAndValidate"/>
        </transition>
        <transition on="previous" to="step1">
            <evaluate expression="newAppointmentStep2.resetForm"/>
        </transition>
        <transition on="cancel" to="successCancel" history="invalidate">
            <evaluate expression="newAppointmentStep2.resetForm"/>
        </transition>
    </view-state>

    <end-state id="successCancel"
               view="externalRedirect:/dashboard/calendar?action=#{currentEvent.id}"/>

</flow>