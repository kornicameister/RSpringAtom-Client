<!--suppress XmlPathReference, WebflowModelInspection -->
<flow xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      parent="wizard"
      start-state="step1"
      xmlns="http://www.springframework.org/schema/webflow"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">

    <on-start>
        <evaluate expression="'NewUserWizard'" result="flowScope.wizardID"/>
        <evaluate expression="'NewUserWizardForm'" result="flowScope.formID"/>
        <evaluate expression="new org.agatom.springatom.web.flows.wizards.support.WizardRequiresStepsHolder()"
                  result="flowScope.requiredSteps"/>

        <!--init required steps-->
        <evaluate expression="flowScope.requiredSteps.add('step1')"/>
        <evaluate expression="flowScope.requiredSteps.add('step2')"/>
        <!--init requires steps-->

        <evaluate expression="newUserWizardStep1.getNewUser(flowRequestContext)"
                  result="flowScope.user"
                  result-type="org.agatom.springatom.server.model.beans.user.SUser"/>
    </on-start>

    <view-state id="step1" view="ui.wizard.NewUserWizard.1" popup="true" model="user">
        <on-render>
            <evaluate expression="newUserWizardStep1.setupForm"/>
        </on-render>
        <transition on="next" to="step2" bind="true" validate="true">
            <evaluate expression="newUserWizardStep1.bindAndValidate"/>
        </transition>
        <transition on="cancel" to="successCancel" history="invalidate"/>
    </view-state>

    <view-state id="step2" view="ui.wizard.NewUserWizard.2" popup="true">
        <on-render>
            <evaluate expression="newUserWizardStep2.setupForm"/>
        </on-render>
        <transition on="next" to="step3" bind="true">
            <evaluate expression="newUserWizardStep2.bindAndValidate"/>
        </transition>
        <transition on="previous" to="step1" history="invalidate">
            <evaluate expression="newUserWizardStep2.resetForm"/>
        </transition>
        <transition on="cancel" to="successCancel" history="invalidate"/>
    </view-state>

    <view-state id="step3" view="ui.wizard.NewUserWizard.3" popup="true">
        <on-render>
            <evaluate expression="newUserWizardStep3.setupForm"/>
        </on-render>
        <transition on="finish" to="successCancel" bind="true">
            <evaluate expression="newUserWizardStep3.bindAndValidate"/>
        </transition>
        <transition on="cancel" to="successCancel" history="invalidate"/>
    </view-state>

    <end-state id="successCancel"
               view="externalRedirect:/dashboard/calendar?action=#{currentEvent.id}"/>

</flow>