<!--suppress XmlPathReference, WebflowModelInspection -->
<flow xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      parent="wizard"
      start-state="setupVin"
      xmlns="http://www.springframework.org/schema/webflow"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">

    <on-start>
        <evaluate expression="'NewCarWizard'" result="flowScope.wizardID"/>
        <evaluate expression="'NewCarWizardForm'" result="flowScope.formID"/>
        <evaluate expression="new org.agatom.springatom.web.flows.wizards.support.WizardRequiresStepsHolder()"
                  result="flowScope.requiredSteps"/>

        <!--init required steps-->
        <evaluate expression="flowScope.requiredSteps.add('setupVin')"/>
        <evaluate expression="flowScope.requiredSteps.add('setupCar')"/>
        <!--init requires steps-->

        <evaluate expression="newCarWizard1.getNewCar(flowRequestContext)"
                  result="flowScope.car"
                  result-type="org.agatom.springatom.server.model.beans.car.SCar"/>
        <set name="flowScope.newBrandModelMsg" value="resourceBundle.newCarNewCarMaster"/>
    </on-start>

    <view-state id="setupVin" view="ui.wizard.NewCarWizard.1" popup="true" model="car">
        <on-render>
            <evaluate expression="newCarWizard1.setupForm"/>
        </on-render>
        <transition on="next" to="setupCar" validate="false" bind="true">
        <!--
                    validation can be done here, due to exception in classmate,
                    instead custom validator is checking the inputs to verify
                    if everything is fine
                -->
            <evaluate expression="newCarWizard1.bindAndValidate"/>
        </transition>
        <transition on="cancel" to="cancel" history="invalidate" bind="false" validate="false"/>
    </view-state>

    <view-state id="setupCar" view="ui.wizard.NewCarWizard.2" popup="true" model="car">
        <on-render>
            <evaluate expression="newCarWizard2.setupForm"/>
        </on-render>
        <transition on="finish" to="success" validate="false">
            <!--
                    validation can be done here, due to exception in classmate,
                    instead custom validator is checking the inputs to verify
                    if everything is fine
                -->
            <evaluate expression="newCarWizard2.bindAndValidate"/>
        </transition>
        <transition on="cancel" to="cancel" history="invalidate" bind="false" validate="false"/>
    </view-state>

    <!-- should be handled in different way -->
    <end-state id="success" view="externalRedirect:/ip/car/#{car.id}"/>
    <!-- TODO should be the page from which the flow was called -->
    <end-state id="cancel" view="externalRedirect:/"/>

</flow>
