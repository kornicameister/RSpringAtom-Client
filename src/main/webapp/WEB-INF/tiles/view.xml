<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

    <!-- head -->
    <definition name="abstract_head" template="/WEB-INF/tiles/templates/fragments/meta/head.jsp">
        <put-attribute name="stylesheets" value="/WEB-INF/tiles/templates/fragments/meta/imports/css-imports.jsp"/>
        <put-attribute name="stylesheets.extra" value=""/>
        <put-attribute name="scripts" value="/WEB-INF/tiles/templates/fragments/meta/imports/scripts-imports.jsp"/>
        <put-attribute name="scripts.extra" value=""/>
    </definition>
    <!-- head -->

    <definition name="abstract_page" template="/WEB-INF/tiles/templates/page.jsp">
        <put-attribute name="head" value="abstract_head"/>
        <put-attribute name="content" value=""/>
        <put-attribute name="content-header" value="/WEB-INF/tiles/templates/fragments/parts/content-header.jsp"/>
        <put-attribute name="navigator" value="abstract_navigator"/>
        <put-attribute name="extra" value="/WEB-INF/tiles/templates/fragments/parts/extra.jsp"/>
        <put-attribute name="error" value="/WEB-INF/tiles/templates/fragments/parts/error.jsp"/>
    </definition>

    <definition name="springatom.tiles.index" extends="abstract_page">
        <put-attribute name="content" value="/WEB-INF/tiles/pages/welcome.jsp"/>
    </definition>
    <definition name="springatom.tiles.reports" extends="abstract_page">
        <put-attribute name="content" value="/WEB-INF/tiles/pages/reports/reports.jsp"/>
    </definition>
    <definition name="springatom.tiles.about" extends="abstract_page">
        <put-attribute name="content" value="/WEB-INF/tiles/pages/about/about.jsp"/>
    </definition>


    <!-- login related definitions -->
    <definition name="springatom.tiles.auth.login"
                extends="abstract_page">
        <put-attribute name="content" value="/WEB-INF/tiles/pages/auth/login.jsp"/>
        <put-attribute name="mode" value="standalone"/>
    </definition>
    <definition name="springatom.tiles.auth.logout" extends="abstract_page">
        <put-attribute name="content" value="/WEB-INF/tiles/pages/auth/logout.jsp"/>
        <put-attribute name="mode" value="standalone"/>
    </definition>
    <definition name="springatom.tiles.auth.login.failed" extends="springatom.tiles.auth.login">
        <put-attribute name="error" value="/WEB-INF/tiles/pages/auth/error_login_failed.jsp"/>
    </definition>
    <definition name="springatom.tiles.auth.access.denied" extends="springatom.tiles.auth.login">
        <put-attribute name="error" value="/WEB-INF/tiles/pages/auth/error_access_is_denied.jsp"/>
    </definition>
    <definition name="springatom.tiles.auth.forgotten.password" extends="abstract_page">
        <put-attribute name="content" value="/WEB-INF/tiles/pages/auth/forgotten_password.jsp"/>
    </definition>
    <definition name="springatom.tiles.auth.login.embedded"
                template="/WEB-INF/tiles/pages/auth/login.jsp">
        <put-attribute name="mode" value="embedded"/>
    </definition>
    <definition name="springatom.tiles.auth.logout.embedded"
                template="/WEB-INF/tiles/pages/auth/logoutEmbedded.jsp">
        <put-attribute name="mode" value="embedded"/>
    </definition>
    <definition name="springatom.tiles.auth.register"
                extends="abstract_page">
        <put-attribute name="content" value="/WEB-INF/tiles/pages/auth/register.jsp"/>
    </definition>

    <!-- dashboard -->
    <!-- dashboard templates -->
    <definition name="abstract.dashboard.menuBar" template="/WEB-INF/tiles/templates/dashboard/menubar/template.jsp">
        <put-attribute name="dashboard.menubar.common"
                       value="/WEB-INF/tiles/templates/dashboard/menubar/common-menu.jsp"/>
        <put-attribute name="dashboard.menubar.specialized" value=""/>
        <put-attribute name="dashboard.menubar.help" value="/WEB-INF/tiles/templates/dashboard/menubar/help-menu.jsp"/>
    </definition>
    <definition name="abstract.dashboard.statusbar"
                template="/WEB-INF/tiles/templates/dashboard/statusbar/template.jsp">
        <put-attribute name="dashboard.statusbar.message" value=""/>
    </definition>
    <definition name="abstract.dashboard.content" template="/WEB-INF/tiles/templates/dashboard/template.jsp">
        <put-attribute name="menubar" value="abstract.dashboard.menuBar"/>
        <put-attribute name="panel" value=""/>
        <put-attribute name="statusbar" value="abstract.dashboard.statusbar"/>
    </definition>
    <!-- dashboard templates -->
    <!-- dashboard pages -->

    <!-- cars -->
    <definition name="springatom.tiles.dashboard.cars.menubar" extends="abstract.dashboard.menuBar">
        <put-attribute name="dashboard.menubar.specialized" value="/WEB-INF/tiles/pages/dashboard/cars/menu.jsp"/>
    </definition>
    <definition name="springatom.tiles.dashboard.cars.content" extends="abstract.dashboard.content">
        <put-attribute name="panel" value="/WEB-INF/tiles/pages/dashboard/cars/panel.jsp"/>
        <put-attribute name="menubar" value="springatom.tiles.dashboard.cars.menubar"/>
    </definition>
    <definition name="springatom.tiles.dashboard.cars" extends="abstract_page">
        <put-attribute name="content" value="springatom.tiles.dashboard.cars.content"/>
    </definition>
    <!-- cars -->

    <!-- calendar -->
    <definition name="springatom.tiles.dashboard.calendar.menubar" extends="abstract.dashboard.menuBar">
        <put-attribute name="dashboard.menubar.specialized" value="/WEB-INF/tiles/pages/dashboard/calendar/menu.jsp"/>
    </definition>
    <definition name="springatom.tiles.dashboard.calendar.content" extends="abstract.dashboard.content">
        <put-attribute name="panel" value="/WEB-INF/tiles/pages/dashboard/calendar/panel.jsp"/>
        <put-attribute name="menubar" value="springatom.tiles.dashboard.calendar.menubar"/>
    </definition>
    <definition name="springatom.tiles.dashboard.calendar.content.head" extends="abstract_head">
        <put-attribute name="stylesheets.extra" value="/WEB-INF/tiles/pages/dashboard/calendar/stylesheets.jsp"/>
        <put-attribute name="scripts.extra" value="/WEB-INF/tiles/pages/dashboard/calendar/scripts.jsp"/>
    </definition>
    <definition name="springatom.tiles.dashboard.calendar" extends="abstract_page">
        <put-attribute name="content" value="springatom.tiles.dashboard.calendar.content"/>
        <put-attribute name="head" value="springatom.tiles.dashboard.calendar.content.head"/>
    </definition>
    <!-- calendar -->

    <!-- reports -->
    <definition name="springatom.tiles.dashboard.reports.menubar" extends="abstract.dashboard.menuBar">
        <put-attribute name="dashboard.menubar.specialized" value="/WEB-INF/tiles/pages/dashboard/reports/menu.jsp"/>
    </definition>
    <definition name="springatom.tiles.dashboard.reports.content" extends="abstract.dashboard.content">
        <put-attribute name="panel" value="/WEB-INF/tiles/pages/dashboard/reports/panel.jsp"/>
        <put-attribute name="menubar" value="springatom.tiles.dashboard.reports.menubar"/>
    </definition>
    <definition name="springatom.tiles.dashboard.reports" extends="abstract_page">
        <put-attribute name="content" value="springatom.tiles.dashboard.reports.content"/>
    </definition>
    <!-- reports -->

    <!-- dashboard pages -->
    <!-- dashboard -->

</tiles-definitions>