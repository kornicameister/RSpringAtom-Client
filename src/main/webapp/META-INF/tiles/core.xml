<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <definition name="abstract_page" template="/tiles/templates/page.jsp">
        <put-attribute name="content" value=""/>
        <put-attribute name="content-header" value="/tiles/templates/fragments/parts/content-header.jsp"/>
        <put-attribute name="navigator">
            <definition template="/tiles/templates/navigator/navigator.jsp">
                <put-attribute name="navigator.secured">
                    <definition template="/tiles/templates/navigator/secured_navigation.jsp">
                        <put-attribute name="dashboard"
                                       value="/tiles/templates/navigator/menus/dashboard_navigation.jsp"/>
                        <put-attribute name="garage"
                                       value="/tiles/templates/navigator/menus/garage_navigation.jsp"/>
                        <put-attribute name="boss"
                                       value="/tiles/templates/navigator/menus/boss_navigation.jsp"/>
                        <put-attribute name="admin"
                                       value="/tiles/templates/navigator/menus/admin_navigation.jsp"/>
                    </definition>
                </put-attribute>
                <put-attribute name="navigator.free" value="/tiles/templates/navigator/menus/free_navigation.jsp"/>
            </definition>
        </put-attribute>
        <put-attribute name="extra" value="/tiles/templates/fragments/parts/extra.jsp"/>
        <put-attribute name="error" value="/tiles/templates/fragments/parts/error.jsp"/>
    </definition>

    <definition name="springatom.tiles.index" extends="abstract_page">
    <put-attribute name="content" value="/tiles/pages/welcome.jsp"/>
    </definition>
    <definition name="springatom.tiles.reports" extends="abstract_page">
    <put-attribute name="content" value="/tiles/pages/reports/reports.jsp"/>
    </definition>
    <definition name="springatom.tiles.about" extends="abstract_page">
    <put-attribute name="content" value="/tiles/pages/about/about.jsp"/>
    </definition>


    <!-- login related definitions -->
    <definition name="springatom.tiles.auth.login"
                extends="abstract_page">
        <put-attribute name="content" value="/tiles/pages/auth/login.jsp"/>
        <put-attribute name="mode" value="standalone"/>
    </definition>
    <definition name="springatom.tiles.auth.logout" extends="abstract_page">
    <put-attribute name="content" value="/tiles/pages/auth/logout.jsp"/>
        <put-attribute name="mode" value="standalone"/>
    </definition>
    <definition name="springatom.tiles.auth.login.failed" extends="springatom.tiles.auth.login">
    <put-attribute name="error" value="/tiles/pages/auth/error_login_failed.jsp"/>
    </definition>
    <definition name="springatom.tiles.auth.access.denied" extends="springatom.tiles.auth.login">
    <put-attribute name="error" value="/tiles/pages/auth/error_access_is_denied.jsp"/>
    </definition>
    <definition name="springatom.tiles.auth.forgotten.password" extends="abstract_page">
    <put-attribute name="content" value="/tiles/pages/auth/forgotten_password.jsp"/>
    </definition>
    <definition name="springatom.tiles.auth.login.embedded"
                template="/tiles/pages/auth/login.jsp"
                templateType="definition">
        <put-attribute name="mode" value="embedded"/>
    </definition>
    <definition name="springatom.tiles.auth.logout.embedded"
                template="/tiles/pages/auth/logoutEmbedded.jsp"
                templateType="definition">
        <put-attribute name="mode" value="embedded"/>
    </definition>
    <definition name="springatom.tiles.auth.register"
                extends="abstract_page">
        <put-attribute name="content" value="/tiles/pages/auth/register.jsp"/>
    </definition>

    <!-- dashboard -->
    <!-- dashboard templates -->
    <definition name="abstract.dashboard.menuBar" template="/tiles/templates/dashboard/menubar/template.jsp">
        <put-attribute name="dashboard.menubar.common" value="/tiles/templates/dashboard/menubar/common-menu.jsp"/>
        <put-attribute name="dashboard.menubar.specialized" value=""/>
        <put-attribute name="dashboard.menubar.help" value="/tiles/templates/dashboard/menubar/help-menu.jsp"/>
    </definition>
    <definition name="abstract.dashboard.statusbar" template="/tiles/templates/dashboard/statusbar/template.jsp">
        <put-attribute name="dashboard.statusbar.message" value=""/>
    </definition>
    <definition name="abstract.dashboard.content" template="/tiles/templates/dashboard/template.jsp">
        <put-attribute name="menubar" value="abstract.dashboard.menuBar"/>
        <put-attribute name="panel" value=""/>
        <put-attribute name="statusbar" value="abstract.dashboard.statusbar"/>
    </definition>
    <!-- dashboard templates -->
    <!-- dashboard pages -->
    <definition name="springatom.tiles.dashboard.cars" extends="abstract_page">
    <put-attribute name="content">
            <definition extends="abstract.dashboard.content">
                <put-attribute name="panel" value="/tiles/pages/dashboard/cars/panel.jsp"/>
                <put-attribute name="menubar">
                    <definition extends="abstract.dashboard.menuBar">
                        <put-attribute name="dashboard.menubar.specialized"
                                       value="/tiles/pages/dashboard/cars/menu.jsp"/>
                    </definition>
                </put-attribute>
            </definition>
        </put-attribute>
    </definition>
    <definition name="springatom.tiles.dashboard.calendar" extends="abstract_page">
    <put-attribute name="content">
            <definition extends="abstract.dashboard.content">
                <put-attribute name="panel" value="/tiles/pages/dashboard/calendar/panel.jsp"/>
                <put-attribute name="menubar">
                    <definition extends="abstract.dashboard.menuBar">
                        <put-attribute name="specialized" value="/tiles/pages/dashboard/calendar/menu.jsp"/>
                    </definition>
                </put-attribute>
            </definition>
        </put-attribute>
    </definition>
    <definition name="springatom.tiles.dashboard.reports" extends="abstract_page">
    <put-attribute name="content">
            <definition extends="abstract.dashboard.content">
                <put-attribute name="panel" value="/tiles/pages/dashboard/reports/panel.jsp"/>
                <put-attribute name="menubar">
                    <definition extends="abstract.dashboard.menuBar">
                        <put-attribute name="specialized" value="/tiles/pages/dashboard/reports/menu.jsp"/>
                    </definition>
                </put-attribute>
            </definition>
        </put-attribute>
    </definition>
    <!-- dashboard pages -->
    <!-- dashboard -->

</tiles-definitions>