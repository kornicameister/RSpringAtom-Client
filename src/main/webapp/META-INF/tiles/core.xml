<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd"
        [<!ENTITY prefix "springatom.tiles.">
                <!ENTITY auth "springatom.tiles.auth.">]>

<tiles-definitions>

    <definition name="abstract_page" template="/tiles/templates/page.jsp">
        <put-attribute name="content" value=""/>
        <put-attribute name="breadcrumb" value="/tiles/pages/default/breadcrumb.jsp"/>
        <put-attribute name="extra" value="/tiles/pages/default/extra.jsp"/>
        <put-attribute name="error" value="/tiles/pages/default/error.jsp"/>
    </definition>

    <definition name="&prefix;index" extends="abstract_page">
        <put-attribute name="content" value="/tiles/pages/welcome.jsp"/>
    </definition>

    <!-- login related definitions -->
    <definition name="&auth;login"
                extends="abstract_page">
        <put-attribute name="content" value="/tiles/pages/auth/login.jsp"/>
        <put-attribute name="mode" value="standalone"/>
    </definition>
    <definition name="&auth;logout" extends="abstract_page">
        <put-attribute name="content" value="/tiles/pages/auth/logout.jsp"/>
        <put-attribute name="mode" value="standalone"/>
    </definition>
    <definition name="&auth;login.failed"
                extends="springatom.tiles.auth.login">
        <put-attribute name="error" value="/tiles/pages/auth/error_login_failed.jsp"/>
    </definition>
    <definition name="&auth;access.denied" extends="springatom.tiles.auth.login">
        <put-attribute name="error" value="/tiles/pages/auth/error_access_is_denied.jsp"/>
    </definition>
    <definition name="&auth;forgotten.password"
                extends="abstract_page">
        <put-attribute name="content" value="/tiles/pages/auth/forgotten_password.jsp"/>
    </definition>
    <definition name="&auth;login.embedded"
                template="/tiles/pages/auth/login.jsp"
                templateType="definition">
        <put-attribute name="mode" value="embedded"/>
    </definition>
    <definition name="&auth;logout.embedded"
                template="/tiles/pages/auth/logoutEmbedded.jsp"
                templateType="definition">
        <put-attribute name="mode" value="embedded"/>
    </definition>
    <definition name="&auth;register"
                extends="abstract_page">
        <put-attribute name="content" value="/tiles/pages/auth/register.jsp"/>
    </definition>


</tiles-definitions>