<actions component="authorization">
    <model name="auth" type="navigation">
        <action name="login" uri="/app/auth/login" view="springatom.tiles.auth.login"/>
        <action name="loginFailed" uri="/app/auth/failed" view="springatom.tiles.auth.login.failed"/>
        <action name="accessDenied" uri="/app/auth/access/denied" view="springatom.tiles.auth.access.denied"/>
        <action name="forgottenPassword" uri="/app/auth/forgotten/password"
                view="springatom.tiles.auth.forgotten.password"/>
        <action name="register" uri="/app/auth/register" view="springatom.tiles.auth.register"/>
    </model>
</actions>