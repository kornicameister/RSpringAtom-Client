<actions component="navigator">
    <model name="dashboard" type="navigation">
        <action name="cars" uri="/app/dashboard/cars" view="springatom.tiles.dashboard.cars"/>
        <action name="calendar" uri="/app/dashboard/calendar" view="springatom.tiles.dashboard.calendar"/>
        <action name="reports" uri="/app/dashboard/reports" view="springatom.tiles.dashboard.reports"/>
    </model>
    <model name="garage" type="navigation">
        <action name="clients" uri="/app/dashboard/garage/clients" view="springatom.tiles.dashboard.garage.clients"/>
        <action name="cars" uri="/app/dashboard/garage/cars" view="springatom.tiles.dashboard.garage.cars"/>
    </model>
    <model name="boss" type="navigation">
        <action name="mechanics" uri="/app/principals/manager/mechanic" view="springatom.tiles.manager.mechanics"/>
        <action name="mechanics" uri="/app/principals/manager/users" view="springatom.tiles.manager.users"/>
    </model>
    <model name="free" type="navigation">
        <action name="index" uri="/app" view="springatom.tiles.index"/>
        <action name="index" uri="/app/reports" view="springatom.tiles.reports"/>
        <action name="index" uri="/app/about" view="springatom.tiles.about"/>
    </model>
</actions>